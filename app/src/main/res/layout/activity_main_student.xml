<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainStudent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="250sp"
            android:layout_height="250sp"
            app:srcCompat="@drawable/strrr"
            android:layout_gravity="center"
            android:layout_marginTop="15sp"/>

        <EditText
            android:id="@+id/PersonName"
            android:layout_width="280sp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint=" Family"
            android:inputType="textPersonName"
            style="@style/Main"
            />

        <EditText
            android:id="@+id/PersonName2"
            android:layout_width="280sp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint=" Name"
            android:inputType="textPersonName"
            style="@style/Main"/>

        <EditText
            android:id="@+id/PersonName3"
            android:layout_width="280sp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint=" patronymic"
            android:inputType="textPersonName"
            style="@style/Main"/>

        <EditText
            android:id="@+id/TextEmailAddress"
            android:layout_width="280sp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint=" EmailAddress"
            android:inputType="textEmailAddress"
            style="@style/Main"
            />

        <EditText
            android:id="@+id/TextTextPassword"
            style="@style/Main"
            android:layout_width="280sp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint=" Password"
            android:inputType="textPassword"
            />

        <EditText
            android:id="@+id/Studenteee"
            android:layout_width="280sp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint=" Студенческий"
            android:inputType="textPersonName"
            style="@style/Main"/>

        <Button
            android:id="@+id/button4"
            android:layout_width="320sp"
            android:layout_height="wrap_content"
            android:text="Зарегистрироватся"
            style="@style/MainBot"
            android:clickable="true"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>